{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app",
  "version": "0.1.0",
  "identifier": "com.s-rin.tauri-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Clicker Clicker Clicker",
        "width": 1200,
        "height": 600
      },
      {
        "label": "widget",
        "title": "Game Status",
        "width": 1200,
        "height": 80,
        "x": 0,
        "y": -1,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "url": "index.html#widget"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
